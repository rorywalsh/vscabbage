{
  "name": "vscabbage",
  "displayName": "cabbage",
  "description": "A Visual Studio extension for Cabbage",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "publisher": "cabbageaudio",
  "repository": {
    "type": "git",
    "url": "https://github.com/rorywalsh/vscabbage"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Education"
  ],
  "icon": "assets/cabbage_transparent.png",
  "activationEvents": [
    "onLanguage:csound-csd",
    "workspaceContains:**/*.csd",
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "cabbage.goToDefinition",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "submenu": "cabbageSubmenu",
          "group": "cabbage.myGroup"
        }
      ],
      "cabbageSubmenu": [
        {
          "command": "cabbage.sendFileToChannel1and2",
          "group": "cabbage.myGroup"
        },
        {
          "command": "cabbage.sendFileToChannel1",
          "group": "cabbage.myGroup"
        },
        {
          "command": "cabbage.sendFileToChannel2",
          "group": "cabbage.myGroup"
        }
      ]
    },
    "submenus": [
      {
        "label": "Send audio file to..",
        "id": "cabbageSubmenu"
      }
    ],
    "configuration": {
      "title": "Cabbage",
      "properties": {
        "cabbage.pathToCsoundLibraryDir": {
          "type": "string",
          "default": "",
          "description": "Path to Csound library - used when building for Daisy"
        },
        "cabbage.pathToCsoundIncludeDir": {
          "type": "string",
          "default": "",
          "description": "Path to Csound includes - used when building for Daisy"
        },
        "cabbage.pathToCabbageBinary": {
          "type": "string",
          "default": "",
          "description": "Path to Cabbage service app. Leave empty to use default location\nor use command palette to browse for custom build directory."
        },
        "cabbage.pathToJsSourceWindows": {
          "type": "string",
          "default": "",
          "description": "Path to Cabbage Javascript directory on Windows. Leave empty to use default location\nor use command palette to browse for custom JS directory."
        },
        "cabbage.pathToJsSourceMacOS": {
          "type": "string",
          "default": "",
          "description": "Path to Cabbage Javascript directory on MacOS. Leave empty to use default location\nor use command palette to browse for custom JS directory."
        },
        "cabbage.pathToJsSourceLinux": {
          "type": "string",
          "default": "",
          "description": "Path to Cabbage Javascript directory on Linux. Leave empty to use default location\nor use command palette to browse for custom JS directory."
        },
        "cabbage.customWidgetDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Custom widget directories. Each directory should contain a `cabbage` folder structure.\n\n**Recommended**: Use `Cabbage: Set Custom Widget Directory` command which automatically copies the required folder structure.\n\nManually added paths must contain: `cabbage/widgets/` subdirectory with all Cabbage framework files."
        },
        "cabbage.audioOutputDevice": {
          "type": "string",
          "default": "Default",
          "description": "Selected audio output device. Use command palette to change."
        },
        "cabbage.audioInputDevice": {
          "type": "string",
          "default": "Default",
          "description": "Selected audio input device. Use command palette to change."
        },
        "cabbage.midiOutputDevice": {
          "type": "string",
          "default": "Default",
          "description": "Selected midi output device. Use command palette to change."
        },
        "cabbage.midiInputDevice": {
          "type": "string",
          "default": "Default",
          "description": "Selected midi input device. Use command palette to change."
        },
        "cabbage.audioSampleRate": {
          "type": "string",
          "default": "44100",
          "description": "Selected sampling rate. Use command palette to change."
        },
        "cabbage.audioBufferSize": {
          "type": "string",
          "default": "32 samples",
          "description": "Selected buffer size. Use command palette to change."
        },
        "cabbage.audioDriver": {
          "type": "string",
          "default": "32 samples",
          "description": "Selected audio driver. Use command palette to change."
        },
        "cabbage.snapToSize": {
          "type": "number",
          "default": 4,
          "description": "Set the number of pixels to move by when dragging an element."
        },
        "cabbage.autoPlaySoundfileInput": {
          "type": "boolean",
          "default": true,
          "description": "If sound file input is selected, play automatically when instrument is started."
        },
        "cabbage.logVerbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging from Cabbage."
        },
        "cabbage.clearConsoleOnCompile": {
          "type": "boolean",
          "default": true,
          "description": "Clear console each time Csound is compiled."
        },
        "cabbage.propertyPanelPosition": {
          "type": "string",
          "enum": [
            "right",
            "left"
          ],
          "default": "right",
          "description": "Position of the property panel in the webview."
        },
        "cabbage.bundleResources": {
          "type": "boolean",
          "default": false,
          "description": "Enable to bundle resources into plugin directory when exporting. Otherwise, all resources will be placed into the CabbageAudio resources folder."
        },
        "cabbage.saveExternalJSON": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic saving of external JSON when compiling .csd file."
        },
        "cabbage.launchInNewColumn": {
          "type": "string",
          "default": "Active",
          "enum": [
            "Active",
            "One",
            "Two",
            "Three",
            "Beside"
          ],
          "enumDescriptions": [
            "Open in the currently active column",
            "Always open in the first column",
            "Always open in the second column",
            "Always open in the third column",
            "Open in a new column beside the active one"
          ],
          "description": "Choose which column to launch the instrument UI in."
        },
        "cabbage.defaultJsonFormatting": {
          "type": "string",
          "default": "Single line objects",
          "description": "Choose an option",
          "enum": [
            "Singe line objects",
            "Multiline objects"
          ],
          "enumDescriptions": [
            "Formats each widget object to a single line enclosed with curly braces",
            "Formats each widget object over multiple lines; typical of most JSON formatters"
          ]
        },
        "cabbage.jsonIndentSpaces": {
          "type": "number",
          "default": 4,
          "minimum": 2,
          "maximum": 8,
          "description": "Number of spaces to use for JSON indentation in Cabbage sections."
        },
        "cabbage.jsonMaxLength": {
          "type": "number",
          "default": 120,
          "minimum": 0,
          "maximum": 200,
          "description": "Maximum line length for JSON formatting in Cabbage sections. Longer lines will be wrapped. 0 is equivalent to JSON.stringify(obj, null, indent)"
        },
        "cabbage.showWarningComment": {
          "type": "boolean",
          "default": true,
          "description": "Show a warning above format and code overwrites in the <Cabbage> section when the extension writes JSON into the document."
        },
        "cabbage.customCommentDecorationColor": {
          "type": "string",
          "default": "#666666",
          "description": "Color for '//' comment properties in Cabbage JSON sections. Use 'Cabbage: Set Custom Comment Decoration Color' command to pick a color."
        },
        "cabbage.cabbageSectionPlacement": {
          "type": "string",
          "default": "top",
          "enum": [
            "top",
            "bottom"
          ],
          "enumDescriptions": [
            "Place <Cabbage> section at the top of the .csd file (traditional placement)",
            "Place <Cabbage> section at the bottom of the .csd file (before </CsoundSynthesizer>)"
          ],
          "description": "Controls where new <Cabbage> sections are placed in .csd files. Note: This setting only applies when creating new sections. To move an existing section, use the 'Cabbage: Move Cabbage Section' command."
        }
      }
    },
    "commands": [
      {
        "command": "cabbage.compile",
        "title": "Compile Cabbage Instrument",
        "category": "Cabbage"
      },
      {
        "command": "cabbage.startServer",
