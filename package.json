    "json-stringify-pretty-compact": "^4.0.0",
    "ws": "^8.16.0",
    "xml2js": "^0.6.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.9",
    "utf-8-validate": "^6.0.5"
  }
}